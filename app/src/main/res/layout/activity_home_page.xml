<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_page"
    android:background="@color/persian_plum">

    <ImageView
        android:id="@+id/paper_img"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/icon_paper"
        app:layout_constraintEnd_toStartOf="@+id/scissor_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="25dp"
        />

    <ImageView
        android:id="@+id/scissor_img"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:background="@drawable/icon_scissor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/rock_img"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/icon_rock"
        app:layout_constraintStart_toEndOf="@+id/scissor_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="25dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paper_img"
        android:text="Start Battle !"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textAllCaps="false"
        android:background="@drawable/backround_start_button"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="25dp"
        android:elevation="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>