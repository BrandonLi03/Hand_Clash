<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pop_up.result_pop_up">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/background_pop_up"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/persian_plum"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@+id/player_choice"
                    android:layout_width="60dp"
                    android:layout_height="65dp"
                    android:background="@drawable/icon_scissor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You"
                    android:textColor="@color/persian_plum"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS"
                android:textColor="@color/persian_plum"
                android:textStyle="bold"
                android:textSize="50sp"/>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="25dp">

                <ImageView
                    android:id="@+id/monster_choice"
                    android:layout_width="60dp"
                    android:layout_height="65dp"
                    android:background="@drawable/icon_scissor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monster"
                    android:textColor="@color/persian_plum"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="you win / monster win"
            android:textColor="@color/persian_plum"
            android:textSize="30sp"
            android:textStyle="italic"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</FrameLayout>